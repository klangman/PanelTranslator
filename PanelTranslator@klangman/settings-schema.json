{
    "languages-header": {
        "type": "header",
        "description": "Default Languages"
    },
    "default-from-language": {
        "type" : "entry",
        "default": "English",
        "description": "Source language"
    },
    "default-to-language": {
        "type" : "entry",
        "default": "French",
        "description": "Target language"
    },

    "engine-header": {
        "type": "header",
        "description": "Translation Engine"
    },
    "translate-engine" : {
        "type" : "combobox",
        "default": 2,
        "options": {
            "Apertium": 0,
            "Aspell": 1,
            "Auto": 2,
            "Bing": 3,
            "Google": 4,
            "Hunspell": 5,
            "Spell": 6,
            "Yandex": 7
        },
        "description": "Engine",
        "tooltip": "Most engines don't support play back and some don't even translate, others just report HTTP errors. So it's best to use \"auto\" and let translate-shell decide what translator to use."
    },

    "auto-header": {
        "type": "header",
        "description": "Panel Button Actions"
    },
    "left-auto-paste" : {
        "type": "combobox",
        "default": 0,
        "options": {
            "Disabled": 0,
            "Selection": 1,
            "Clipboard": 2
        },
        "description": "Automatically paste and translate on left click",
        "tooltip": "Automatically paste the current selection/clipboard content and translate it when opening the popup window using a left click on the translator panel button"
    },
    "left-auto-play": {
        "type": "switch",
        "default": 0,
        "description": "Automatically play the translation on left click",
        "dependency" : "left-auto-paste>0"
    },
    "middle-button-action" : {
        "type" : "combobox",
        "default": 1,
        "options": {
            "Do nothing": 0,
            "Show popup menu, paste Selection and translate": 1,
            "Show popup menu, paste Clipboard and translate": 2,
            "Show popup menu, paste Selection, translate and play": 3,
            "Show popup menu, paste Clipboard, translate and play": 4,
            "Play translation of Selection": 5,
            "Play translation of Clipboard": 6
        },
        "description": "Middle button action",
        "tooltip": "Select the action to take when using the middle mouse button to click on the translator panel button"
    },
    "ctrl-middle-button-action" : {
        "type" : "combobox",
        "default": 1,
        "options": {
            "Do nothing": 0,
            "Show popup menu, paste Selection and translate": 1,
            "Show popup menu, paste Clipboard and translate": 2,
            "Show popup menu, paste Selection, translate and play": 3,
            "Show popup menu, paste Clipboard, translate and play": 4,
            "Play translation of Selection": 5,
            "Play translation of Clipboard": 6
        },
        "description": "Ctrl + Middle button action",
        "tooltip": "Select the action to take when holding the Ctrl key and using the middle mouse button to click on the translator panel button"
    }
}
